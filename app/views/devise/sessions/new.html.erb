<div class="panel panel-primary col-lg-6" style="margin-left:28%;">
  <div class="panel-heading">
    <h3 class="panel-title">User Sign In</h3>
  </div>
  <div class="panel-body ">
    
<div class="form-horizontal col-lg-8 btn-lg ">
  <fieldset>
 
         


<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<% if resource.errors.any?%>
 <div class="alert alert-warning">
              <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
         <%= devise_error_messages! %></div>
         <% end %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true , required:true, class:"form-control"%>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off" ,required:true , class:"form-control"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in" , class:"btn btn-primary"%>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) , class:"btn btn-primary"%><br />
<% end -%>
  </div>
<% end %>

</fieldset>

</div>


</div>
