<% @users.each do |user|%>
  <li class="list-group-item">
    <%= user.name%> 
    <%if is_friend?(user.id)%>
    <%=link_to"+",guest_friend_request_path(user.id),class:"navbar-right btn-info btn-xs" , style:"font-size:20px;"%>
    <% if user.online?%>
    <i class="badge glyphicon glyphicon-signal" style="background:green;">&nbsp;</i>
    <% end%>
    <%end%>
  </li>
  <% end %>
  <div class="apple_pagination" style="height:10%;">
  <%= paginate @users %>
  </div>
</ul>
