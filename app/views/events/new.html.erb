

<div class="panel panel-primary col-md-7" style="margin-left:20%;">
 <div class="panel-heading">
    <h3 class="panel-title">New Event
     </h3>
    </div>
<div class="panel-body">
<%= form_for(@event) do |f| %>
 
<div class="form-group">
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :title ,class:"form-control", maxlength:30 , required:true%>
  </div>
  </div>
  <div class="form-group">
  <div class="field">
    <%= f.label :discription %><br>
    <%= f.text_area :discription , required:true, class:"form-control"%>
  </div>
  </div>
  <div class="form-group">
  <div class="field">
  <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="glyphicon-calendar">
      </i>
    </span>
     <%= f.label :event_date %><br>
    <%= f.text_field :date , required:true, id:"datetimepicker"%>
    

</div>
</div>

  <div class="actions">
    <%= f.submit "Create Event",class:"btn btn-primary"%>
  </div>
<% end %>
<br>
<%= link_to 'Cancel', root_path , class:"btn btn-primary", style:" margin-top:-50px; float:right;"%>
   
</div></div>