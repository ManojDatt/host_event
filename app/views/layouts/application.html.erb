<!DOCTYPE html>
<html>
  <head>
    <title>HostEventGuest</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => 'reload' %>
  </head>

  <body>
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
       <%= link_to "My@~Events", root_path, class: "navbar-brand" %>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav">
      <%unless current_user%>
        <li>
        <%= link_to "Sign up", new_user_registration_path%><br />
        </li>
        <li>
        <%= link_to "Log in", new_user_session_path %><br />
        </li>
        <% else %>
         <li><a href="#"class="navbar-brand" > Signed ~ <%= current_user.name%></a></li>
  
         <li><%=link_to "Update Profile"%></li>
         <li><%=link_to"Create New Event",new_event_path%></li>
        </ul>
         <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Event Notification <span class="caret"></span><span class="badge"><%= event_count%></span></a>
              <ul class="dropdown-menu">


              <% if friend_list1.present?%>
                  
                      <% friend_list1.each do |friend|%>
                      <%user=User.find(friend.friend_id)%>
                       <li class="list-group-item">Hoster: <%= user.name%><br>
                      Title: <%=user.events.last.title %><br>
                      Date : <%=user.events.last.date %>
                       </li>
                      <% end %>
                  
                  <% end%>

                  <% if friend_list2.present?%>
               
                      <% friend_list2.each do |friend|%>
                       <%user=User.find(friend.user_id)%>
                       <li class="list-group-item well">Hoster: <%= user.name%><br>
                        Title: <%=user.events.last.title %><br>
                      Date : <%=user.events.last.date %>

                       </li>
                      <% end %>
                  
                  <% end%>
              
               
              </ul>
        
       </li>


        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Friendship Request <span class="caret"></span><span class="badge"><%=friend_request_list.count if friend_request_list.present?%></span></a>
              <ul class="dropdown-menu">
               <% if friend_request_list.present?%>
               <% friend_request_list.each do |list|%>
               <li>
                    <ul class="breadcrumb">
                      <li><h4><%=link_to User.find(list.user_id).name%></h4></li>
                      <li><%=link_to "Accept",accept_friend_request_path(list.user_id)%>/
                      <%=link_to "Deny",reject_friend_request_path(list.user_id)%></li>
                    </ul>
              
               </li>
              <%end%>
               <% end %>
              </ul>
        
       </li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Event Join Request <span class="caret"></span><span class="badge">3</span></a>
              <ul class="dropdown-menu">
               <li> <%=link_to "freiends request 1"%></li>
              <li> <%=link_to "freiends request 2"%></li>
               <li> <%=link_to "freiends request 3"%></li> 
              </ul>
         
     
       </li>
   

       <li>
          <%= link_to "Log Out", users_sign_out_path , method: :get%>
        </li>
    </ul>
      
<%end%>
    </div>
  </div>
  </nav>
  <div class="alert alert-info">
 <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
  <%= notice%></div>
<%= yield %>

<script type="text/javascript">
  $(function() {
    $('#datetimepicker').datetimepicker({
      language: 'en',
      pick12HourFormat: true,
      pickTime: true
    });
  });

  $(function() {
    $('#datetimepicker1').datetimepicker({
      language: 'en',
      pick12HourFormat: true,
      pickTime: true
    });
  });
</script>
</body>
</html>
